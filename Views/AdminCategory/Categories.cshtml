@model NorthwindMarket.Models.AdminCategoryViewModel
<table class="table table-hover" id="tableCategories">
    <tr>
        <th>Kategori No</th>
        <th>Kategori Adı</th>
        <th>Açıklama</th>
        <th>Durum</th>

    </tr>
    <tbody id="tablecategoriesBody">
        @foreach (var item in Model.Category)
        {
            <tr>
                <td>@item.CategoryID</td>
                @switch (item.Activated)
                {
                    case true:
                        <td><a href="@Url.Action("Category","Home", new { id=item.CategoryID })" target="_blank" style="color:black;text-decoration:none;">@item.CategoryName</a></td>
                        break;
                    case false:
                        <td>@item.CategoryName</td>
                        break;

                }

                <td>@item.Description</td>

                @switch (item.Activated)
                {
                    case true:
                        <td><button class="btn btn-success" id="@item.CategoryID" onclick="disableCategory(@item.CategoryID)"><i class="far fa-check-circle"></i></button></td>
                        break;
                    case false:
                        <td><button class="btn btn-danger" id="@item.CategoryID" onclick="enableCategory(@item.CategoryID)"><i class="far fa-times-circle"></i></button></td>
                        break;
                }
            </tr>
        }
    </tbody>
</table>

