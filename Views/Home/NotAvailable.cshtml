@model NorthwindMarket.Models.HomeViewModel
@{
    ViewBag.Title = "Mevcut Değil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main">
    <div class="wrap">
        <ul class="breadcrumb breadcrumb__t"><a class="home" href="@Url.Action("Index","Home")">Ana Sayfa</a> / <a href="/Home/Category/@Model.Product.CategoryID">@Model.Product.Categories.CategoryName</a> / @Model.Product.ProductName</ul>
        <div class="row">
            <div class="col-sm-3">
                <img src="~/Content/images/product.jpg">
            </div>
            <div class="col-sm-8">
                <h1 class="display-4">Üzgünüz, "@Model.Product.ProductName" şu anda mevcut değil.</h1><br />
                <p>Lütfen daha sonra tekrar deneyiniz.</p>
                <a href="@Url.Action("Index","Home")" class="btn btn-secondary" style="width:50%">Ana Sayfa</a>
            </div>
        </div>
    </div>
</div>
<br />
<br />
